@model DeleteDepartmentVM

@{
    ViewData["Title"] = "Delete Department";
}

<h2>Are you sure you want to delete this?</h2>
<h3 class="text-danger">This action cannot be undone.</h3>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div>
    <h4>Department: @Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-4">Name:</dt>
        <dd class="col-sm-8">@Model.Name</dd>

        <dt class="col-sm-4">Area:</dt>
        <dd class="col-sm-8">@Model.Area</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Area" />

    <div class="form-group">
        <label asp-for="DeletedBy" class="form-label">Deleted By (Confirmation)</label>
        <input asp-for="DeletedBy" class="form-control" />
        <span asp-validation-for="DeletedBy" class="text-danger"></span>
    </div>

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>