@model DeleteDepartmentVM

@{
    ViewData["Title"] = "Delete Department";
}

<h2>Are you sure you want to delete this?</h2>
<h3 class="text-danger">This action cannot be undone.</h3>
<hr />

<div>
    <h4>Department: @Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Area)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Area)
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">

    @* CRITICAL: The hidden Id field is required. *@
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Area" />

    <div class="mb-3">
        <label asp-for="DeletedBy" class="control-label">Deleted By (Confirmation)</label>
        <input asp-for="DeletedBy" class="form-control" />
        <span asp-validation-for="DeletedBy" class="text-danger"></span>
    </div>

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>