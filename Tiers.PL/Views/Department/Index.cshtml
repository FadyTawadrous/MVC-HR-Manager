@model IEnumerable<GetDepartmentVM>

@{
    ViewData["Title"] = SharedLocalizer["Departments"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@SharedLocalizer["Departments"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> @SharedLocalizer["Create New Department"]
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No departments found.
    </div>
}
else
{
    <table class="table table-striped table-hover shadow-sm align-middle">
        <thead class="table-dark">
            <tr>
                <th>@SharedLocalizer["ID"]</th>
                <th>@SharedLocalizer["Name"]</th>
                <th>@SharedLocalizer["Location"]</th>
                <th>@SharedLocalizer["EmployeeCount"]</th>
                <th>@SharedLocalizer["Actions"]</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var dep in Model)
            {
                <tr>
                    <td>@dep.Id</td>
                    <td>@dep.Name</td>
                    <td>@dep.Area</td>
                    <td>@dep.EmployeeCount</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@dep.Id" class="btn btn-sm btn-info">@SharedLocalizer["Details"]</a>
                        <a asp-action="Edit" asp-route-id="@dep.Id" class="btn btn-sm btn-warning">@SharedLocalizer["Edit"]</a>
                        <a asp-action="Delete" asp-route-id="@dep.Id" class="btn btn-sm btn-danger">@SharedLocalizer["Delete"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}