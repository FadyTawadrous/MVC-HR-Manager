@model IEnumerable<GetDepartmentVM>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Department</a>
</p>

<br />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No departments found.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Area</th>
                <th>Employee Count</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var dep in Model)
            {
                <tr>
                    <td>@dep.Id</td>
                    <td>@dep.Name</td>
                    <td>@dep.Area</td>
                    <td>@dep.EmployeeCount</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@dep.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@dep.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@dep.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}