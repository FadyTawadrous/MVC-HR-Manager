@model Tiers.BLL.ModelVM.Employee.UpdateEmployeeVM

@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        @*
          CRITICAL: enctype="multipart/form-data" is REQUIRED for file uploads.
        *@
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            @* This div will display errors from the service *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*
              CRITICAL: The hidden Id field is required to know which employee to update.
            *@
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" type="number" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Image" class="control-label">New Image (Optional)</label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3">
                    <label>Current Image</label><br />
                    <img src="~/Files/Images/@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
                </div>
            }

            <div class="mb-3">
                <label asp-for="DepartmentId" class="control-label">Department</label>
                @*
                  This binds the <select> tag to the DepartmentId property.
                  The asp-items tag uses the SelectListItem list we passed in the VM.
                *@
                <select asp-for="DepartmentId" class="form-select" asp-items="@Model.Departments">
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UpdatedBy" class="control-label">Updated By</label>
                <input asp-for="UpdatedBy" class="form-control" />
                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        // This partial view enables client-side validation
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}