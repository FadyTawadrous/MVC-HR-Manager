@model IEnumerable<GetEmployeeVM>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Employee</a>
</p>

<br />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No employees found.
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Photo</th>
                <th>Name</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Department Name</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>
                        <img src="~/Files/Images/@(emp.ImageUrl ?? "default.png")"
                             alt="@emp.Name"
                             class="img-thumbnail"
                             style="width: 75px; height: 75px; object-fit: cover; border-radius: 50%;">
                    </td>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Salary.ToString("C")</td>
                    <td>@emp.DepartmentName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}