@model IEnumerable<GetEmployeeVM>

@{
    ViewData["Title"] = SharedLocalizer["Employees"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@SharedLocalizer["Employees"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> @SharedLocalizer["Create New Employee"]
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No employees found.
    </div>
}
else
{
    <table class="table table-striped table-hover shadow-sm align-middle">
        <thead class="table-dark">
            <tr>
                <th>@SharedLocalizer["Photo"]</th>
                <th>@SharedLocalizer["Name"]</th>
                <th>@SharedLocalizer["Age"]</th>
                <th>@SharedLocalizer["Salary"]</th>
                <th>@SharedLocalizer["Department"]</th>
                <th>@SharedLocalizer["Actions"]</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>
                        <img src="~/Files/Images/@(emp.ImageUrl ?? "default.png")"
                             alt="@emp.Name"
                             class="img-thumbnail"
                             style="width: 75px; height: 75px; object-fit: cover; border-radius: 50%;">
                    </td>
                    <td class="fw-bold">@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Salary.ToString("C")</td>
                    <td><span class="badge bg-info text-dark">@emp.DepartmentName</span></td>
                    <td>
                        <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-sm btn-info">@SharedLocalizer["Details"]</a>
                        <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-warning">@SharedLocalizer["Edit"]</a>
                        <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-sm btn-danger">@SharedLocalizer["Delete"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}